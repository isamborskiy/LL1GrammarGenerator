grammar Postfix $

decl[int i]
	# EPS EOF
	# block decl[i]
	{
		System.out.println("BLABLABLA " + i);
	}
	$
	
block
	# type amp var
	$
	
type
	# BOOL
	# INT
	# LONG
	# CHAR
	$

amp
	# EPS
	# AND
	$

var 
	# STAR var
	# NAME next
	$
	
next
	# SEMICOLON
	# COMMA var
	$

BOOL		: (bool) $
INT			: (int) $
LONG		: (long) $
CHAR		: (char) $
SEMICOLON	: ([;]) $
COMMA		: ([,]) $
STAR		: ([*]) $
AND			: ([&]) $
NAME		: ([a-z]+) $
SKIP		: ([ \t\r\n]) -> skip $